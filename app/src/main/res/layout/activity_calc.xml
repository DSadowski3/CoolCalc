<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aoji.coolcalc.CalcActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#28c5c6">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1234"
                android:id="@+id/resultsText"
                android:textColor="#ffffff"
                android:textSize="45dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            android:layout_gravity="top">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/sevenBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/eightBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/nineBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/divideBtn"
                android:layout_weight="1"
                android:src="@drawable/div"
                android:background="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/fourBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/fiveBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/sixBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/multiBtn"
                android:layout_weight="1"
                android:background="#ffffff"
                android:src="@drawable/multi"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="4">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/oneBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/twoBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/threeBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/substractBtn"
                android:layout_weight="1"
                android:background="#ffffff"
                android:src="@drawable/minus"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:weightSum="3">

            <Button
                android:layout_width="179dp"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/clearBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#28c5c6"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/zeroBtn"
                android:layout_weight="1"
                android:textSize="30dp"
                android:background="#ffffff"/>

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:id="@+id/addBtn"
                android:layout_weight="1"
                android:background="#ffffff"
                android:src="@drawable/addd"/>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calcBtn"
        android:background="#00ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingTop="130dp"
        android:paddingRight="60dp"
        android:src="@drawable/summ"/>

</RelativeLayout>
